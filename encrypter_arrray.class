        {
            char c=s.charAt(i);
            for(int j=0;j<character_encrypted.length;j++)
            {
                if(c==character_encrypted[j])
                 ns=ns+character[j];
            }
            
        }
        System.out.println("the message de-encrypted is ="+ ns);
    }
    public static void main(){
        Scanner sc=new Scanner(System.in);
        encrypter_array ob=new encrypter_array();
        System.out.println("enter 1:to encrypt a message or 2:to de-encrypt a message");
